<ul class="topnav">
    <?php foreach($this->menu as $title => $titleOptions): ?>
    <li>
            <?php $menuId = isset($titleOptions['id'])? "id='" . $titleOptions['id'] . "'" : '' ?>
        <a <?php echo $menuId ?> href=""><?php echo $title ?></a>
            <?php if (count($titleOptions) > 0): ?>
        <ul class="subnav">
                    <?php foreach($titleOptions as $subtitleId => $subtitleOptions): ?>
