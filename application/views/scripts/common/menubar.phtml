            <li>
                <a id="<?php echo $subtitleId?>" 
                   href="<?php echo isset($subtitleOptions['url'])? $subtitleOptions['url'] : '' ?>"
                   class="trigger <?php echo isset($subtitleOptions['dataType'])? $subtitleOptions['dataType'] : '' ?>">
                            <?php echo isset($subtitleOptions['value'])? $subtitleOptions['value'] : '' ?></a>
            </li>
                    <?php endforeach ?>
        </ul>
            <?php  endif ?>
    </li>
    <?php endforeach ?>
</ul>
